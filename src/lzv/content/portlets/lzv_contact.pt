<dl class="portlet portletLzvContact"
    i18n:domain="hbz.content"
    tal:define="portal_state context/@@plone_portal_state;
                portal_url portal_state/portal_url;
                contact python: view.contact_data(context.contact);
                academictitles python:view.get_academictitles()">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
            Ansprechpartner
        <span class="portletTopRight"></span>
    </dt>
    
    <dd class="portletItem odd">
        <img tal:attributes="src python: contact['image_url'];
			     alt python: 'Foto von %s' % contact['title']"
             tal:condition="python:contact['image_url']"
             class="portrait"
             width="120px"
             height="120px"
             src="" />
                
        <strong class="name">
            <abbr tal:condition="contact/academictitle" 
                  tal:attributes="title python:academictitles[contact['academictitle']]">
                  ${python: contact['academictitle']}
            </abbr>
                  ${python: contact['title']}
        </strong><br />
        <a class="email" href="#"
           tal:attributes="href string:mailto:${contact/email};
	                   aria-label python: 'E-Mailadresse: %s' % contact['email']">${python: contact['email']}</a><br />
        <a class="phone"  href="#"
           tal:attributes="href python:'tel:' + contact['phone'].replace(' ','').replace('-','');
	                   aria-label python: 'Telefonnummer: %s' % contact['phone']">${python: contact['phone']}</a>
    </dd>
</dl>
